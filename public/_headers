# Headers globales para seguridad
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()

# Página de inicio (dinámico, cache moderado)
/
  Cache-Control: public, max-age=300, s-maxage=3600, stale-while-revalidate=86400
  CDN-Cache-Control: public, s-maxage=3600, stale-while-revalidate=86400
  Vary: Accept-Language, Accept-Encoding

# Página de inicio en inglés
/en
  Cache-Control: public, max-age=300, s-maxage=3600, stale-while-revalidate=86400
  CDN-Cache-Control: public, s-maxage=3600, stale-while-revalidate=86400
  Vary: Accept-Language, Accept-Encoding

# CV (menos cambios, cache más largo)
/cv
  Cache-Control: public, max-age=600, s-maxage=7200, stale-while-revalidate=86400
  CDN-Cache-Control: public, s-maxage=7200, stale-while-revalidate=86400
  Vary: Accept-Language, Accept-Encoding

# CV en inglés
/en/cv
  Cache-Control: public, max-age=600, s-maxage=7200, stale-while-revalidate=86400
  CDN-Cache-Control: public, s-maxage=7200, stale-while-revalidate=86400
  Vary: Accept-Language, Accept-Encoding

# Assets estáticos (cache muy largo)
/favicon.ico
  Cache-Control: public, max-age=31536000, immutable

/cv.ico
  Cache-Control: public, max-age=31536000, immutable

/robots.txt
  Cache-Control: public, max-age=86400

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/skills/*
  Cache-Control: public, max-age=31536000, immutable

/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# API routes (cache corto)
/api/*
  Cache-Control: public, max-age=60, s-maxage=300, stale-while-revalidate=3600
  Vary: Accept-Language

# Blog (cache moderado)
/blog
  Cache-Control: public, max-age=600, s-maxage=3600, stale-while-revalidate=86400

/blog/*
  Cache-Control: public, max-age=600, s-maxage=3600, stale-while-revalidate=86400

# Sitemap
/sitemap*
  Cache-Control: public, max-age=3600, s-maxage=7200
