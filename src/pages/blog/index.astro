---
import LayoutLanding from "@/layout/LayoutLanding.astro";
import { CACHE_HEADERS } from "@/utils/ssr-config";

// Configurar headers de caché para blog
Object.entries(CACHE_HEADERS.DYNAMIC).forEach(([key, value]) => {
  Astro.response.headers.set(key, value);
});
---

<LayoutLanding
  title="Blog - Jose Miguel Vasquez"
  description="Blog de desarrollo web, programación y tecnología por Jose Miguel Vasquez"
  keywords={['blog', 'desarrollo web', 'programación', 'tecnología', 'tutoriales']}
  type="website"
>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-4">Blog</h1>
    <p class="text-lg text-gray-600">Esta sección está en desarrollo. Próximamente encontrarás artículos sobre desarrollo web, programación y tecnología.</p>
  </main>
</LayoutLanding>