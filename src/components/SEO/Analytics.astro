---
interface Props {
  googleAnalyticsId?: string;
  googleTagManagerId?: string;
}

const { googleAnalyticsId, googleTagManagerId } = Astro.props;
---

{googleTagManagerId && (
  <>
    <!-- Google Tag Manager -->
    <script type="text/partytown" src={`https://www.googletagmanager.com/gtag/js?id=${googleTagManagerId}`}></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', '{googleTagManagerId}');
    </script>
  </>
)}

{googleAnalyticsId && (
  <>
    <!-- Google Analytics -->
    <script type="text/partytown" src={`https://www.googletagmanager.com/gtag/js?id=${googleAnalyticsId}`}></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', '{googleAnalyticsId}', {
        page_title: document.title,
        page_location: window.location.href,
      });
    </script>
  </>
)}

